}

.row,
.grid {
    margin: 0 auto;
    height: 500px;
}

.col-1-3 {
    display: inline-block;
    vertical-align: top;
}

.col-1-3 {
    width: 33.33%;
}

.teaser {
    text-align: center;
    margin: 0 auto;
    height: 500px;
}

.middle {
    border-left: 1px solid gray;
    border-right: 1px solid gray;
}

.col-2-3 {
    width: 66.66%;
}

section img {
