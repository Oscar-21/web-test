@import url('reset.css');
@import url('fonts.css');
@import url('icons.css');
* {
    box-sizing: border-box;
}

body {
    font-family: 'Aller-web', Arial, Sans-Serif;
}

img {
    max-width: 100%;
    max-height: 100%;
}

ul {
    list-style: none;
}

/*
  ========================================
  Grid
  ========================================
*/

*,
*:before,
*:after {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

/*
  ========================================
  Typography
  ========================================
*/

/*
  ========================================
  Links
  ========================================
*/

a {
    text-decoration: none;
    color: inherit;
}

/*
  ========================================
  Navigation
  ========================================
*/

.logo-home {
    background: #FFFFFF;
    /* dimensions */
    height: 90px;
    width: 100%;
}

.logo img {
    /* positioning */
    /* top: 3.75rem; */
    /* position: relative; */
    float: left;
    margin-left: 3rem;
    /* dimensions */
    width: 16.8rem;
    height: 45 px;
}

.nav-home-top {
    transform: skewX(-20deg);
    background: #FFFFFF;
    /* typography */
    font-family: Aller;
    font-weight: lighter;
    ;
    font-size: 1em;
    color: #777777;
    line-height: 80px;
    text-align: center;
    /* dimensions */
    height: 80px;
    width: 50%;
    /* positioning */
    margin-right: -30px;
    position: absolute;
    top: 10px;
    /* left: 50%; */
    margin-left: 55%;
    /* float: left; */
}

@media (min-width: 1024px) {
    .nav-home-top {
        /* left: 50%; */
        transform: skewX(-20deg);
    }
}

@media (min-width: 1366px) {
    .nav-home-top {
        left: 45%;
    }
}

.nav-home-top>li {
    float: left;
    width: 20%;
    height: 100%;
    border-right: 1px solid grey;
    text-align: center;
}

.nav-home-top>li:last-child {
    border: none;
}

.nav-home-top a {
    display: inline-block;
    transform: skewX(20deg);
    width: 50%;
    height: 100%;
    box-sizing: border-box;
}

.nav-home-top li:hover {
    box-sizing: border-box;
    color: mediumseagreen;
}

.nav-home-skewed {
    background: #FFFFFF;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.4);
    transform: skewX(-20deg);
    /* typography */
    font-family: 'Aller';
    font-weight: 500;
    ;
    line-height: 80px;
    /* dimensions */
    height: 80px;
    width: 50%;
    box-sizing: border-box;
    /* positioning */
    /* margin: 0 -7% 0 0; */
    float: right;
}

@media (min-width: 1024px) {
    .nav-home-skewed>li:last-child {
        padding: 0 30px 0 0;
    }
}

@media (min-width: 1365px) {
    .nav-home-skewed>li {
        width: 15%;
    }
}

@media (min-width: 1366px) {
    .nav-home-skewed {
        width: 60%;
    }
}

.nav-home-skewed>li {
    width: 25%;
    float: left;
    text-align: center;
}

.nav-home-skewed>li:hover {
    cursor: pointer;
    background: #696969;
    color: #eeeeee;
}

.nav-home-skewed a {
    display: inline-block;
    transform: skewX(20deg);
}

