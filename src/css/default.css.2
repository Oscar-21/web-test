/*
  ========================================
  Primary header
  ========================================
*/

.primary-header {
  position:fixed ;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 500;
  margin: 0 auto;
  height: 8rem; 
  box-shadow: 1px 4px 20px rgba(0,0,0,0.55)
}

header img {
  width: 16.8rem;
  height: 2.5rem;
  float: left; 
  position: relative;
  top: 3.75rem;
  margin-left: 3rem;
}

.light {
  font-family: 'Aller-web', Fantasy;
  font-weight: 300;
}

.primary-nav {
  font-size: .875rem;
  font-weight: 400;
  letter-spacing: .03rem;
  height: inherit;
  text-transform: uppercase;
  margin-right: 3.12rem;
  height: 100%;
  /* height: 400px; */
}

.skewed-list {
  height: inherit;
  transform: skew(-20deg)
}

.skewed-list a {
  display:block;
  transform: skew(20deg)
}

.secondary-nav .skewed-list a {
  display:block;
  transform: skew(35deg);
}

.secondary-nav .skewed-list li {
  /* margin: 0 0 30px 0; */
}

.primary-nav li {
  border-right: 1px solid grey;
}

.regular {
  box-shadow: 1px 4px 20px rgba(0,0,0,0.55);
  background: grey;
}
.secondary-nav ul {
  text-align: center;
  width: 700px;
}

.primary-nav li:last-child {
  border: none;
}


.secondary-nav {
  position: fixed; 
  transform: skew(-20deg);
  top: 8rem;
  font-size: .875rem;
  font-weight: 400;
  letter-spacing: .031px;
  text-transform: uppercase;
  box-shadow: 1px 4px 20px rgba(0,0,0,0.55);
  margin-left: 50%;
  height: 5rem;
  margin-top: -3rem;
  background: white;
}


