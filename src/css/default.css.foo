}

.right {
  width: 25%;
  height: 400px;
  background: #777777;
  overflow: hidden;
  transform: skewX(-20deg);
}

.navItems {
  line-height: 80px;
  list-style: none;
  transform: skewX(20deg);
  height: 100%;
  box-sizing: border-box;
  display: inline;
}

.navItems>div {
  width: 25%;
  float: left;
  height: 100%;
  text-align: center;

}

.navItems>div>li {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.navItems>div>li:hover {
  box-sizing: border-box;
  background: mediumseagreen;
  width: 100%;
  height: 100%;
}

.navItems>div>li:hover {
  color: #eeeeee;
  box-sizing: border-box;
  background: mediumseagreen;
  width: 100%;
  height: 100%;
}

.navItems>div>li:hover>div {
  transform: skewX(20deg);
}

.navItems>div>li>div {
  transform: skewX(20deg);
}

.navItemsTop {
  display: inline-block;
  line-height: 80px;
  list-style: none;
  text-align: center;
  transform: skewX(20deg);
  height: 100%;
  box-sizing: border-box;
  margin-left: 4.5em;
}

.navItemsTop>div {
  float: right;
  padding: 0 75px 0 0;
  width: 25%;
  height: 100%;
  transform: skewX(-20deg);
  border-right: 1px solid grey;
  text-align: center;
}


.navItemsTop>div>li {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0 0 0 12px;
}

.navItemsTop>div>li:hover {
  box-sizing: border-box;
  color: mediumseagreen;
  width: 100%;
  height: 100%;
}

.navItemsTop>div>li:hover {
  color: #eeeeee;
  box-sizing: border-box;
  color: mediumseagreen;
  width: 100%;
  height: 100%;
}

.navItemsTop>div>li:hover>div {
  transform: skewX(20deg);
}

.navItemsTop>div>li>div {
  transform: skewX(20deg);
}

