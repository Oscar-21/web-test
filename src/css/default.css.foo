@import url('reset.css');
@import url('fonts.css');
@import url('icons.css');

img {
  max-width: 100%;
}

body {
  width: 100%;
  font-family: 'Aller-web', Arial, Sans-Serif;
}

a {
  text-decoration: none;
  color: inherit;
}

/*
  ========================================
  Grid
  ========================================
*/

*,
*:before,
*:after {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.container {
  padding-left: 8vw;
}

/*
  ========================================
  Clearfix
  ========================================
*/

 .group:before,
.group:after {
  content: "";
  display: table;
}
.group:after {
  clear: both;
}
.group {
  clear: both;
  *zoom: 1;
} 


